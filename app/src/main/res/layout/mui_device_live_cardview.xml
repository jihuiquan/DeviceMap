<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_common_280px"
    android:layout_height="@dimen/dimen_common_340px"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_exit_iv"
            android:layout_width="@dimen/dimen_common_45px"
            android:layout_height="@dimen/dimen_common_45px"
            android:scaleType="center"
            android:src="@mipmap/mui_ic_device_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="塔机·1232143424"
            android:textColor="#fff" />
    </RelativeLayout>

    <com.example.myapplication.devicemap.MUIDeviceDashboardView
        android:id="@+id/device_dashview"
        android:layout_width="@dimen/dimen_common_260px"
        android:layout_height="@dimen/dimen_common_120px"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_common_4px"
        android:text="AI防倾斜"
        android:textColor="@color/mui_color_dash_text"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_common_4px"
        android:scaleType="fitXY"
        android:src="@mipmap/mui_ic_device_placeholder" />
</LinearLayout>